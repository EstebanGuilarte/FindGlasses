@model ProyectoWeb.Entities.UsuarioEnt
@{
    ViewData["Title"] = "RegistrarCuenta";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}


<div class="content-wrapper d-flex align-items-center auth px-0">
    <div class="row w-100 mx-0">
        <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                <div class="brand-logo">
                    <h1>FindGlasses</h1>
                </div>
                @using (Html.BeginForm("RegistrarCuenta", "Login", FormMethod.Post, new { @class = "pt-3" }))
                {
                    @ViewBag.MensajePantalla

                    <div class="form-group">
                        @Html.TextBoxFor(m => m.identificacion, new {@onkeyup="ConsultarNombre()", @class="form-control form-control-lg", @type="text", @placeholder="Identificación" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.nombre, new {@readOnly="readOnly", @style="background-color:#eeeeee", @class="form-control form-control-lg", @type="text", @placeholder="Nombre Completo" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.usuario, new { @class="form-control form-control-lg", @type="text", @placeholder="Nombre de Usuario" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.correo, new { @class="form-control form-control-lg", @type="email", @placeholder="Correo Electrónico" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.contrasenna, new { @class="form-control form-control-lg", @type="password", @placeholder="Contraseña"})
                    </div>

                    <div class="mt-3">
                        <input type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" value="REGISTRARSE">
                    </div>
                    <div class="text-center mt-4 font-weight-light">
                        ¿Ya tienes una cuenta? <a href="@Url.Action("IniciarSesion","Login")" class="text-primary">Iniciar Sesión</a><br />
                        <a href="@Url.Action("IniciarSesion", "Login")" color: black;>Volver</a><br />
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<script src="~/js/consultanombreapi.js"></script>