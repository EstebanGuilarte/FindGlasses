@model IEnumerable<ProyectoWeb.Entities.UsuarioEnt>

@{
    ViewData["Title"] = "ConsultarUsuarios";
    Layout = "~/Views/Shared/_Layout_Usuarios.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Información de Usuarios</h4>

            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Identificación</th>
                        <th>Nombre</th>
                        <th>Correo Electrónico</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.identificacion</td>
                            <td>@item.nombre</td>
                            <td>@item.correo</td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>